			<label>Email</label>
			<InputText @bind-Value="loginModel.Email" />
		</div>
		<div class="input">
			<label>Hasło</label>
			<InputText type="password" @bind-Value="loginModel.Password" />
		</div>
		<ValidationSummary />
		<Button IsSubmit=true Content="Zaloguj się !" />
	</EditForm>
</div>
@if (IsLoading)
{
	<Loading />
}


